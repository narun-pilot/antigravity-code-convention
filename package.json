{
  "name": "antigravity-code-review",
  "displayName": "Antigravity Code Review",
  "description": "Trigger automated code reviews using the code-review skill and Morakot coding conventions.",
  "version": "0.0.3",
  "publisher": "narun-dev",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Antigravity Code Review Settings",
      "properties": {
        "antigravityCodeReview.autoInstallSkills": {
          "type": "boolean",
          "default": true,
          "description": "Automatically install SKILL.md and code-review.md into the workspace's .agents/skills/ folder on activation."
        },
        "antigravityCodeReview.reviewFocus": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "xss-prevention",
              "naming-conventions",
              "code-complexity",
              "security",
              "performance",
              "accessibility",
              "documentation",
              "error-handling",
              "test-coverage"
            ]
          },
          "default": [
            "xss-prevention",
            "naming-conventions",
            "code-complexity",
            "security"
          ],
          "description": "Select which review focus areas the AI agent should prioritize during code review."
        },
        "antigravityCodeReview.additionalRulesPath": {
          "type": "string",
          "default": "",
          "description": "Path to an additional rules file. These rules are applied ON TOP of the built-in Morakot coding conventions â€” they do not replace them. Leave empty to use only the default rules."
        },
        "antigravityCodeReview.diffBaseBranch": {
          "type": "string",
          "default": "auto",
          "description": "Base branch for generating diffs. Set to 'auto' to use the current branch context, or explicitly set a branch like 'origin/main'."
        },
        "antigravityCodeReview.severityThreshold": {
          "type": "string",
          "enum": [
            "info",
            "low",
            "medium",
            "high",
            "critical"
          ],
          "default": "low",
          "description": "Minimum severity level for reported issues. Issues below this threshold will be omitted from the review output.",
          "enumDescriptions": [
            "Show all findings including informational notes",
            "Show low severity and above",
            "Show medium severity and above (recommended for experienced devs)",
            "Only show high and critical issues",
            "Only show critical issues"
          ]
        },
        "antigravityCodeReview.cleanupOnDeactivate": {
          "type": "boolean",
          "default": true,
          "description": "Remove skill files from the workspace when the extension is deactivated or uninstalled."
        }
      }
    },
    "commands": [
      {
        "command": "antigravity.reviewChanges",
        "title": "Antigravity: Request Code Review (All Changes)",
        "category": "Antigravity"
      },
      {
        "command": "antigravity.reviewActiveFile",
        "title": "Antigravity: Review Current File",
        "category": "Antigravity"
      },
      {
        "command": "antigravity.reviewByCommit",
        "title": "Antigravity: Review Specific Commit/Range",
        "category": "Antigravity"
      },
      {
        "command": "antigravity.reviewStagedChanges",
        "title": "Antigravity: Review Staged & Unpushed Changes",
        "category": "Antigravity"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "antigravity.reviewChanges",
          "group": "navigation",
          "when": "view == workbench.view.scm"
        },
        {
          "command": "antigravity.reviewStagedChanges",
          "group": "navigation@1",
          "when": "view == workbench.view.scm"
        }
      ],
      "editor/title": [
        {
          "command": "antigravity.reviewActiveFile",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ],
      "editor/context": [
        {
          "command": "antigravity.reviewActiveFile",
          "group": "antigravity",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "antigravity.reviewChanges",
          "when": "true"
        },
        {
          "command": "antigravity.reviewActiveFile",
          "when": "true"
        },
        {
          "command": "antigravity.reviewByCommit",
          "when": "true"
        },
        {
          "command": "antigravity.reviewStagedChanges",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:uninstall": "node ./out/uninstall.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.2.5",
    "typescript": "^5.1.3",
    "eslint": "^8.41.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8"
  }
}
